#include <stdio.h>
#include <stdlib.h>

struct Day {
    char *name;
    int date;
    char *activity;
};
void create(struct Day *day) {
    day->name = malloc(20);
    day->activity = malloc(100);
    printf("Enter day name, date, and activity: ");
    scanf("%s %d %s", day->name, &day->date, day->activity);
}

void read(struct Day *calendar, int size) {
    for (int i = 0; i < size; i++) {
        printf("Day %d: ", i + 1);
        create(&calendar[i]);
    }
}

void display(struct Day *calendar, int size) {
    printf("\nWeek's Activity Details:\n");
    for (int i = 0; i < size; i++) {
        printf("Day %d: %s, Date: %d, Activity: %s\n", 
               i + 1, calendar[i].name, calendar[i].date, calendar[i].activity);
    }
}

int main() {
    struct Day *calendar = malloc(7 * sizeof(struct Day));
    read(calendar, 7);
    display(calendar, 7);
    return 0;
}
